pipeline {
    agent any 
    stages {
        stage ("Clean up"){
            steps {
                sh 'rm -rf /var/lib/jenkins/workspace/astonvilla-soulaima/*'
                sh 'ls'
            }
        }
        stage ("Clone repo"){
            steps {
                sh "git clone https://github.com/FtouhiS/astonvilla.git"
            }
        }
        stage ("Generate docker image") {
            steps {
                 dir("astonvilla"){
                    sh "docker build -t soulaimaft98933/astonvilla:1.1.${env.BUILD_NUMBER} ."
                }                
            }
        }
        stage ("push docker image") {
            steps {
                 dir("astonvilla"){
                    sh "docker login -u soulaimaft98933 -p soulaimaftdocker"

                    sh "docker push soulaimaft98933/astonvilla:1.1.${env.BUILD_NUMBER}"
                }                
            }
        }
        stage ("SonarQube Analysis") {
            steps {
                script {
                    // Define SonarQube environment variables
                    def sonarEnv = [
                        'SONAR_HOST_URL': 'http://192.168.2.18:9000/', // Update if necessary
                    ]
                    
                    withEnv(sonarEnv) {
                        dir('astonvilla') {
                            sh 'mvn clean verify sonar:sonar -Dsonar.projectKey=astonvilla -Dsonar.host.url=${SONAR_HOST_URL} -Dsonar.login=${SONAR_AUTH_TOKEN}'
                        }
                    }
                }
            }
        }
    }
}
