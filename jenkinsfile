pipeline {
    agent any 
    environment {
        SONAR_HOST_URL = 'http://192.168.2.18:9000/' 
    }
    stages {
        stage ("Clean up") {
            steps {
                sh 'rm -rf /var/lib/jenkins/workspace/astonvilla-soulaima/*'
                sh 'ls'
            }
        }
        stage ("Clone repo") {
            steps {
                sh "git clone https://github.com/FtouhiS/astonvilla.git"
            }
        }
        stage ("SonarQube Analysis") {
            environment {
                scannerHome = tool name: 'SonarQubeScanner', type: 'hudson.plugins.sonar.SonarRunnerInstallation'
            }
            steps {
                dir("astonvilla") {
                    withCredentials([string(credentialsId: 'astonvilla-token-sonar', variable: 'SONAR_TOKEN')]) {
                        sh """
                            export SONAR_TOKEN=${SONAR_TOKEN}
                            ${scannerHome}/bin/sonar-scanner \
                            -Dsonar.projectKey=astonvilla-jenkins \
                            -Dsonar.sources=. \
                            -Dsonar.host.url=${SONAR_HOST_URL} \
                        """
                    }
                }
            }
        }
        stage ("Generate docker image") {
            steps {
                dir("astonvilla") {
                    sh "docker build -t soulaimaft98933/astonvilla:1.1.${env.BUILD_NUMBER} ."
                }
            }
        }
        stage ("Push docker image") {
            steps {
                 dir("astonvilla"){
                    sh "docker login -u soulaimaft98933 -p soulaimaftdocker"
                    sh "docker push soulaimaft98933/astonvilla:1.1.${env.BUILD_NUMBER}"
                }                
            }
        }
    }
    post {
        success {
            emailext (
                subject: "SUCCESS: Jenkins Pipeline '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                body: "The Jenkins Pipeline has been successfully completed.\n\nProject: ${env.JOB_NAME}\nBuild Number: ${env.BUILD_NUMBER}\n\nCheck the console output at ${env.BUILD_URL} to view the results.",
                to: "soulaima.ftouhi@esprit.tn",
                from: "jenkins@example.com"
            )
        }
        failure {
            emailext (
                subject: "FAILURE: Jenkins Pipeline '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                body: "The Jenkins Pipeline has failed.\n\nProject: ${env.JOB_NAME}\nBuild Number: ${env.BUILD_NUMBER}\n\nCheck the console output at ${env.BUILD_URL} to view the results.",
                to: "soulaima.ftouhi@esprit.tn",
                from: "jenkins@example.com"
            )
        }
    }
}
